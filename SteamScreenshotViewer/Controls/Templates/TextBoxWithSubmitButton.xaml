<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:SteamScreenshotViewer.Controls"
                    xmlns:me="clr-namespace:SteamScreenshotViewer.MarkupExtensions">
    <Style TargetType="{x:Type ctrl:TextBoxWithSubmitButton}">
        <Style.Setters>
            <Setter Property="Prompt">
                <Setter.Value>
                    <TextBlock
                        Text="enter full path to the screenshot directory of any game (you will only have to do this once)" />
                </Setter.Value>
            </Setter>
            <Setter Property="TextBox">
                <Setter.Value>
                    <TextBox Margin="0,10,0,0" />
                </Setter.Value>
            </Setter>
            <Setter Property="SubmitButton">
                <Setter.Value>
                    <Button DockPanel.Dock="Right" VerticalAlignment="Center"
                            Content="Set base path"
                            Command="{me:AncestorBinding Type={x:Type ctrl:TextBoxWithSubmitButton}, Path=SubmitButtonCommand}" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="20">
                                <ContentControl
                                    Content="{me:AncestorBinding Type={x:Type ctrl:TextBoxWithSubmitButton }, Path=Prompt}" />
                                <ContentControl
                                    Content="{me:AncestorBinding Type={x:Type ctrl:TextBoxWithSubmitButton }, Path=TextBox}" />

                            </StackPanel>
                            <ContentControl
                                Content="{me:AncestorBinding Type={x:Type ctrl:TextBoxWithSubmitButton }, Path=SubmitButton}" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>