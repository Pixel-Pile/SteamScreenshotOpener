<Window x:Class="SteamScreenshotViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamScreenshotViewer"
        xmlns:markupExtensions="clr-namespace:SteamScreenshotViewer.MarkupExtensions"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontSize="16"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style TargetType="local:MainWindow">
            <Setter Property="BasePath" Value="{Binding ElementName=BasePathControl, Path=TextBox.Text}">
            </Setter>
        </Style>
    </Window.Resources>
    <ContentPresenter Content="{markupExtensions:AncestorBinding Type=local:MainWindow, Path=CurrentView}" />
</Window>