<UserControl x:Class="SteamScreenshotViewer.Views.ViewApps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:steamScreenshotViewer="clr-namespace:SteamScreenshotViewer"
             xmlns:views="clr-namespace:SteamScreenshotViewer.Views"
             xmlns:model="clr-namespace:SteamScreenshotViewer.Model"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             MaxHeight="500">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top">
                App List
            </TextBlock>
            <ListView
                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=views:ViewApps}, Path=GameResolver.ObservedResolvedApps}">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type model:ResolvedSteamApp}">
                        <TextBlock Text="{Binding Path=Name}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseDoubleClick" Handler="OnAppClick" />
                    </Style>
                </ListView.Resources>
            </ListView>
        </DockPanel>
</UserControl>